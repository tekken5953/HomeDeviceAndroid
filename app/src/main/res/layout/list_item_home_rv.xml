<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@drawable/home_rv_bg"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/listItemHomeRvValue"
        style="@style/medium"
        android:textSize="18sp"
        android:text="1234"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/listItemHomeRvUnit"
        style="@style/medium"
        android:textSize="12sp"
        android:text="KWH"
        android:textColor="@color/main_blue"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/listItemHomeRvValue"
        android:layout_alignBottom="@+id/listItemHomeRvValue"/>

    <ImageView
        android:id="@+id/listItemHomeRvIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:tint="@color/main_blue"
        android:src="@drawable/speed2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"/>

    <ImageView
        android:id="@+id/listItemHomeRvWave"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/wave"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/listItemHomeRvValue"
        android:layout_marginTop="38dp"/>

    <TextView
        android:id="@+id/listItemHomeRvTitle"
        style="@style/medium"
        android:text="Electricity"
        android:textSize="18sp"
        android:layout_below="@+id/listItemHomeRvWave"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/listItemHomeRvSubTitle"
        style="@style/regular"
        android:textSize="12sp"
        android:text="12 outlet points"
        android:layout_below="@+id/listItemHomeRvTitle"
        android:layout_alignStart="@+id/listItemHomeRvTitle"
        android:layout_marginTop="5dp"
        android:textColor="@color/main_gray"
        android:layout_marginBottom="24dp"/>

</RelativeLayout>