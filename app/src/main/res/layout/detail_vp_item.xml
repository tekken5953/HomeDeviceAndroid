<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/detail_vp_item_text"
        style="@style/bold"
        android:layout_centerHorizontal="true"
        android:text="Second Floor"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/detail_vp_running_container"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/ripple_green"
        android:layout_below="@+id/detail_vp_item_text"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/detail_vp_item_running"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/circle"
            app:tint="@color/main_green" />
    </LinearLayout>


</RelativeLayout>